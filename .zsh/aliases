#!/bin/zsh
# zsh aliases

# general {{{1

alias :q='exit'
alias :wq='exit'
alias a='ack -i'
alias e='print -l **/*'
alias h='history'
alias j='jobs -l'
alias u='uptime'
alias v='vim'
alias x='exit'

for c in cp rm mv chmod chown rename; do
    alias $c="nocorrect $c -v"
done

for c in alias expr find wget which; do
    alias $c="noglob $c"
done

alias egrep='egrep -I --color=auto'
alias grep='grep -I --color=auto'
alias less='less -iM'
alias man='nocorrect man'
alias mirror="noglob wget --mirror --no-parent --recursive --timestamping --continue --recursive"
alias mkdir='nocorrect mkdir -p'
alias mmv='noglob zmv -W'
alias path='echo -e ${PATH//:/\\n}'
alias po="popd"
alias psg="ps aux | grep"
alias pu="pushd"
alias rscp="nocorrect rsync -aP --no-whole-file --inplace"
alias rsmv="nocorrect rscp --remove-source-files"
alias sudo="sudo " # allow alias expansion
alias trail="tail -n 300 -f"
alias tree='tree --noreport --dirsfirst -FCsu'
if which htop >/dev/null; then
    alias top='htop'
fi

# typos {{{1

alias xs='cd'
alias vf='cd'
alias moer='more'
alias moew='more'
alias kk='ll'
alias cd..='cd ..'

# global {{{1

alias -g V='| vim'
alias -g L='| less -REF'
alias -g M='| more'
alias -g H='| head'
alias -g T='| tail'
alias -g G='| grep'
alias -g C='| wc -l'
alias -g S='| sort'
alias -g A='&> /dev/null | at'
alias -g DN='&> /dev/null'
alias -g X='| xclip'

# suffix {{{1

alias -s bz2=show-archive
alias -s tex=${EDITOR:-vim}
alias -s dvi=xdvi
alias -s gz=show-archive
alias -s htm=${BROWSER:-lynx}
alias -s html=${BROWSER:-lynx}
alias -s tar=show-archive
alias -s tex=${EDITOR:-vim}
alias -s txt=${PAGER:-less}
alias -s zip=show-archive

# chmod {{{1

alias rw-='chmod 600'
alias rwx='chmod 700'
alias r--='chmod 644'
alias r-x='chmod 755'

# ls {{{1

typeset -A lsMap
lsMap[lsa]='show hidden'
lsMap[lsx]='sort by extension'
lsMap[lsk]='sort by size'
lsMap[lsc]='sort by change time'
lsMap[lsu]='sort by access time'
lsMap[lsr]='recursive ls'
lsMap[lst]='sort by date'
lsMap[lsl]='pipe through less'
lsMap[lsbig]='display the biggest files'
lsMap[lsd]='only show directories'
lsMap[lse]='only show empty directories'
lsMap[lsnew]='display the newest files'
lsMap[lsold]='display the oldest files'
lsMap[lssmall]='display the smallest files'
ls_() { for i in ${(k)lsMap}; printf "%s - %s\n" $i $lsMap[$i] }
alias ls?=ls_

alias ls='ls -hFG --color=auto --group-directories-first'
alias lsa='ls -Al'                   # show hidden files
alias lsx='ls -lXB'                  # sort by extension
alias lsk='ls -lSr'                  # sort by size
alias lsc='ls -lcr'                  # sort by change time
alias lsu='ls -lur'                  # sort by access time
alias lsr='ls -lR'                   # recursive ls
alias lst='ls -ltr'                  # sort by date
alias lsl='ls -Al L'                 # pipe through 'less'
alias lsbig='ls -flh *(.OL[1,10])'   # display the biggest files
alias lsd='ls -d *(/)'               # only show directories
alias lse='ls -d *(/^F)'             # only show empty directories
alias lsnew='ls -rl *(D.om[1,10])'   # display the newest files
alias lsold='ls -rtlh *(D.om[1,10])' # display the oldest files
alias lssmall='ls -Srl *(.oL[1,10])' # display the smallest files

# du {{{1

alias du='du -kh'
alias duh='du -slh'
alias dub='du -slb'
alias duk='du -slk'
alias dum='du -slm'
alias dug='du -sl --block-size=1G'

# df {{{1

alias df='df -kh'
alias dfh='df -PTh'
alias dfb='df -PT --block-size=1'
alias dfk='df -PTk'
alias dfm='df -PTm'
alias dfg='df -PT --block-size=1G'

# git {{{1

alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gco='git checkout'
alias gd='git diff | less'
alias gl='git pull'
alias gp='git push'
alias gpcd='git push && cap deploy'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gs='git status'
