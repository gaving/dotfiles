#!/bin/zsh

alias @='grt'
alias b='bat'
alias e=$EDITOR
alias f='fd'
alias g='_g'
alias h='http'
alias l='exa --all --git --long --icons'
alias r='_r'
alias t='tree'
alias u='$EDITOR "$(git rev-parse --show-toplevel 2>/dev/null || echo .)/.git/index"'
alias v=$VISUAL

for c in cp rm mv chmod chown rename; do
    alias $c="nocorrect $c -v"
done

for c in alias expr find wget which; do
    alias $c="noglob $c"
done

alias di='docker images'
alias dpa='docker ps -a'

alias fzf=fzf-tmux
alias mkdir='nocorrect mkdir -p'
alias mmv='noglob zmv -W'
alias rscp="nocorrect rsync -aP --no-whole-file --inplace"
alias scp='scp -r'
alias sudo='noglob sudo '

alias -g B='| bat'
alias -g C='| wc -l'
alias -g G='| rg -i'
alias -g H='| head'
alias -g J="| jq '.'"
alias -g L='| less -REF'
alias -g N='&> /dev/null'
alias -g NN='> /dev/null 2>&1'
alias -g P='| column -t'
alias -g S='| sort'
alias -g T='| tail'
alias -g V='| v'
