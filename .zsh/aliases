#!/bin/zsh
# zsh aliases

alias a="rg -p -uu"

for c in cp rm mv chmod chown rename; do
    alias $c="nocorrect $c -v"
done

for c in alias expr find wget which; do
    alias $c="noglob $c"
done

alias egrep='egrep -I --color=always'
alias grep='grep -I --color=always'
alias jq='jq -C'
alias mirror="noglob wget --mirror --no-parent --recursive --timestamping --continue --recursive"
alias mkdir='nocorrect mkdir -p'
alias rscp="nocorrect rsync -aP --no-whole-file --inplace"
alias rsmv="nocorrect rscp --remove-source-files"
alias sudo='noglob do_sudo '
alias scp='scp -r'
alias vim='nvim'

# zmv

alias mmv='noglob zmv -W'
alias zmv='noglob zmv'
alias zcp='noglob zmv -C'
alias zln='noglob zmv -L'

# global

alias -g C='| wc -l'
alias -g G='| grep -i'
alias -g H='| head'
alias -g J="| jq '.'"
alias -g L='| less -REF'
alias -g N='&> /dev/null'
alias -g S='| sort'
alias -g T='| tail'
alias -g V='| vim'

# suffix

alias -s txt=${PAGER:-less}

# chmod

alias ls="ls -hFG --color=auto"
alias lsa='ls -Al'                 # show hidden files

# size

alias du='du -kh'
alias duh='du -slh'

# docker

alias d=docker
alias dm=docker-machine
alias dl='docker ps -l -q'
alias dps='docker ps'
alias dpa='docker ps -a'
alias di='docker images'
alias dip="docker inspect --format '{{ .NetworkSettings.IPAddress }}'"
alias dkd='docker run -d -P'
alias dki='docker run -i -t -P'
alias dex='docker exec -i -t'
alias drmf='docker stop $(docker ps -a -q) && docker rm $(docker ps -a -q)'

drm() { docker rm $1 }
dri() { docker rmi $1 }
dbu() { docker build -t=$1 .; }
dalias() { alias | grep 'docker' | sed "s/^\([^=]*\)=\(.*\)/\1 => \2/"| sed "s/['|\']//g" | sort; }
dbash() { docker exec -it $(docker ps -aqf "name=$1") bash; }

# brew

alias bin="brew install"
alias bun="brew uninstall"
alias bug="brew upgrade"
alias bup="brew update"