# .screenrc configuration

# {{{1 term

termcapinfo rxvt-unicode 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
term screen

# {{{1 options

activity "activity in %n (%t) [%w:%s]~"
altscreen on
bell "%C -> %n%f activity!"
defflow off
defscrollback 1000
defutf8 on
msgwait 0
nethack off
shell zsh
silencewait 15
startup_message off
vbell on
vbell_msg "!"

# {{{1 binds

bind h prev
bind l next
bind ^l next
bind P paste
bind K quit

bind -c shiftalt C next
bind -c shiftalt D prev
bindkey ^[^[O command -c shiftalt # PuTTY Alt
bindkey ^[[c next
bindkey ^[[d prev
bindkey ^[Oc next
bindkey ^[Od prev

bindkey "q" quit
bindkey "w" eval kill
bindkey "t" screen 1
bindkey "[Z" next

# {{{1 status

sorendition 04 07
hardstatus on
hardstatus alwayslastline "%-Lw%{+r}%50> %n%f %t %{-}%+Lw%< %-= %H | %{= kw}%0c, %d/%m/%y%{-} "

# {{{1 custom

source $HOME/.screen/custom
