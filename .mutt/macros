macro index H "<enter-command>unset wait_key\n\
<pipe-entry>bogofilter -n\n\
<enter-command>set wait_key\n" "set message as non-spam"

macro index S "<enter-command>unset wait_key\n\
<pipe-entry>bogofilter -s\n\
<enter-command>set wait_key\n<save-message>+spam\n" "relearn message as spam, and move to spam mailbox"


